{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "paths": {
      "@environments/*": ["environments/*"],
      "@app/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@node_modules/*": ["../node_modules/*"],
      "@modules/*": ["app/modules/*"],
      "@shared/*": ["modules/shared/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
